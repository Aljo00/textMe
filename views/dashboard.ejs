<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TextMe Dashboard</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/jpg" href="/assets/logo.jpg" />
    <link rel="stylesheet" href="/styles/dashboard.css" />
  </head>
  <body>
    <nav class="top-navbar">
      <div class="brand">TextMe</div>
      <div class="user-info">
        <div class="nav-icons">
          <button class="icon-btn" id="themeToggle">
            <i class="fas fa-moon"></i>
          </button>
          <div class="profile-container">
            <img
              src="<%= user.profilePic %>"
              alt="Profile"
              class="profile-pic"
            />
          </div>
          <button class="logout-btn">Logout</button>
        </div>
      </div>
    </nav>

    <div class="app-container">
      <!-- First Column - Icon Navigation -->
      <div class="nav-icons-column">
        <div class="icon-nav-item active" data-tooltip="Friends">
          <i class="fas fa-users"></i>
        </div>
        <div class="icon-nav-item" data-tooltip="Friend Requests">
          <i class="fas fa-user-plus"></i>
        </div>
        <div class="icon-nav-item" data-tooltip="Search Users">
          <i class="fas fa-search"></i>
        </div>
        <div class="icon-nav-item" data-tooltip="Call History">
          <i class="fas fa-phone-alt"></i>
        </div>
        <div class="icon-nav-item" data-tooltip="Sent Requests">
          <i class="fas fa-paper-plane"></i>
        </div>
      </div>

      <!-- Second Column - List View -->
      <div class="list-column">
        <div class="list-header">
          <h3>Friends</h3>
        </div>
        <div class="list-content">
          <!-- User list will be dynamically loaded here -->
        </div>
      </div>

      <!-- Third Column - Interaction Area -->
      <div class="interaction-column">
        <button class="back-button">
          <i class="fas fa-arrow-left"></i>
        </button>
        <div class="chat-container" style="display: none">
          <div class="chat-header">
            <div class="chat-user-info">
              <div class="profile-container">
                <img src="" alt="" class="user-avatar chat-avatar" />
                <div class="status-indicator"></div>
              </div>
              <div class="chat-user-details">
                <h4 class="chat-user-name"></h4>
                <span class="chat-user-status"></span>
              </div>
            </div>
            <div class="chat-actions">
              <button class="icon-btn" title="Voice Call">
                <i class="fas fa-phone"></i>
              </button>
              <button class="icon-btn" title="Video Call">
                <i class="fas fa-video"></i>
              </button>
              <button class="icon-btn" title="More">
                <i class="fas fa-ellipsis-v"></i>
              </button>
            </div>
          </div>
          <div class="chat-messages">
            <!-- Messages will be dynamically added here -->
          </div>
          <div class="chat-input-area">
            <button class="icon-btn">
              <i class="fas fa-paperclip"></i>
            </button>
            <div class="message-input-container">
              <input
                type="text"
                placeholder="Type a message..."
                id="messageInput"
              />
              <button class="icon-btn emoji-btn">
                <i class="far fa-smile"></i>
              </button>
            </div>
            <button class="icon-btn send-btn">
              <i class="fas fa-paper-plane"></i>
            </button>
          </div>
        </div>
        <div class="placeholder-message">
          <div class="empty-chat-illustration">
            <i class="fas fa-comments"></i>
          </div>
          <h3>Welcome to TextMe</h3>
          <p>Select a friend from the list to start chatting</p>
          <span class="sub-text"
            >Send messages, share media, and stay connected</span
          >
        </div>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      window.currentUserId = "<%= user._id %>";
    </script>
    <script src="/scripts/dashboard.js"></script>
  </body>
</html>
